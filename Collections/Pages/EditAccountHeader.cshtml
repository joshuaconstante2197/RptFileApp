@page "{arCode}"
@model CollectionsWebLayer.Pages.EditAccountHeaderModel
@{
    ViewData["Title"] = "EditAccountHeader";
}

<h1>Edit Account Header</h1>
<div class="row">
    <div class="col-4">
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <input asp-for="@Model.accountHeader.ArCode" value="@Model.accountHeader.ArCode" class="form-control" hidden/>
                <span asp-validation-for="@Model.accountHeader.ArCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.accountHeader.AccountName" value="@Model.accountHeader.AccountName" class="control-label"></label>
                <input asp-for="@Model.accountHeader.AccountName" value="@Model.accountHeader.AccountName" class="form-control" />
                <span asp-validation-for="@Model.accountHeader.AccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.accountHeader.AccountPhoneNumber" value="@Model.accountHeader.AccountPhoneNumber" class="control-label"></label>
                <input asp-for="@Model.accountHeader.AccountPhoneNumber" value="@Model.accountHeader.AccountPhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.accountHeader.AccountPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Submit" />
            </div>
        </form>
    </div>
</div>



